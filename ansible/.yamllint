extends: default

rules:
  
  # Require consistent indentation for list items, etc. All 2 spaces, or all 4 spaces.
  indentation:
    indent-sequences: consistent

  # Disable line-length and truthy values reporting 
  line-length: {max: 160}
  truthy: disable

  # Max 1 space to separate the elements in brakets
  braces:
    max-spaces-inside: 1

  # Max 1 space in empty brackets
  brackets:
    min-spaces-inside-empty: 0 
    max-spaces-inside-empty: 1
